      }

      .btn {
        margin-top: 2rem;
        background-color: white;
        color: #333;
        padding: 0.8rem 1.5rem;
        border-radius: 30px;
        text-decoration: none;
        font-weight: bold;
        transition: background 0.3s ease;
        display: inline-block;
      }

      .btn:hover {
        background: #f0f0f0;
      }
